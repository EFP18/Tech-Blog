<!-- Loop over each object in the posts array -->

{{#if posts.length}}
<div class="col-md-6 post-list">
  <h3>Current posts:</h3>
  {{#each posts}}
  <div class="row mb-2">
    <div class="col-md-8">
      <h4><a href="/post/{{id}}">{{title}}</a></h4>
      <div>
        Posted by {{User.username}} on {{format_date createdAt}}
      </div>
    </div>
    <div class="card-body">
      {{body}}
    </div>
    </div>
  </div>
  {{/each}}
</div>
{{/if}}

