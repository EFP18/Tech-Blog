<div class="row mt-4 post card">
  <div class="col-md-6 card-header">
    <h3>Create a New Post:</h3>

    <form class="card-body" id="new-post-form">
      <div class="form-group">
        <label for="post-title" id="post-title">Post Title:</label>
        <input
          class="form-input"
          type="text"
          id="post-title"
          name="post-title"
        />
      </div>

      <div class="form-group">
        <label
          class="form-label"
          for="post-body"
          id="post-body"
        >Content:</label>
        <textarea class="form-input" id="post-body" name="post-body"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

</div>

<script src="/js/new.js"></script>