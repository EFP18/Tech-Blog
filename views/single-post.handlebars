
{{!-- a single post based on the id requested --}}
<section class="container">
  <h2>{{post.title}}</h2>
  <h2>{{post.body}}</h2>
  <h3>Posted by: {{post.user.username}}</h3>
  <h4>Date: {{ format_time post.date }}</h4>
</section>

{{#if post.Comments}}
  <section class="flex-row justify-center">
    <h3>Comments</h3>
  </section>
  <div>
    {{#each post.Comments}}
      <div>
        {{body}}
        <p>{{User.username}}, {{format_date createdAt}}</p>
      </div>
    {{/each}}
  </div>
{{/if}}

  <form id="new-comment-form" class="card">
    <div class="card-header">
      <h3>Add New Comment</h3>
    </div>

    <div class="card-body">
      <input type="hidden" name="postId" value="{{post.id}}" />

      <label class="form-label" for="commentBody">Comment</label>

      <textarea name="comment-body" class="form-input"></textarea>

      <button type="submit" class="btn">Submit</button>
    </div>
  </form>
</div>

<script src="/js/comment.js"></script>